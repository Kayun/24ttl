.tools
	position relative
	z-index 0
	user-select none

	&-container
		padding 53px 95px 52px
		background-color #dcd9c0

	&__slider
		width 100%
		height 95px

		&-prev
		&-next
			position absolute
			top 44px
			border-top 8px solid $trn
			border-bottom 8px solid $trn
			cursor pointer

		&-prev
			right 116px
			border-right 10px solid #fff

		&-next
			right 51px
			border-left 10px solid #fff


	&__slide
		width 95px
		height 95px

		img
			width 100%

@media only screen and (max-width: 320px)
	.tools

		&-container
			padding 53px 20px 52px

		&__slider

			&-next
			&-prev
				top 17px

			&-next
				right 21px

			&-prev
				right 62px
