.tools
	position relative

	&-container
		padding 53px 95px 52px
		background-color #dcd9c0

	&__slider
		width 100%
		height 95px

		&-prev
		&-next
			position absolute
			top 44px
			border-top 8px solid $trn
			border-bottom 8px solid $trn
			cursor pointer

		&-prev
			right 116px
			border-right 10px solid #fff

		&-next
			right 51px
			border-left 10px solid #fff


	&__slide
		width 95px
		height 95px

		img
			width 100%
