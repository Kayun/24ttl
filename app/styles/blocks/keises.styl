.keises
	position relative
	height 900px

	&__slider
		z-index 2 !important
		width 100%
		height 800px

	&__open
		position absolute !important
		z-index 1 !important
		top 100px
		left 0
		width 100%
		height 800px

		&_z_11
			z-index 11 !important

		&-item
			overflow hidden
			width 100%
			height 100%

		&-prev
		&-next
			position absolute
			top 44px
			border-top 8px solid $trn
			border-bottom 8px solid $trn
			cursor pointer
			opacity 0
			transition opacity .5s ease
			will-change opacity

		&-prev
			right 116px
			border-right 10px solid #fff

		&-next
			right 51px
			border-left 10px solid #fff

	&__slide-item
		position absolute
		z-index 1
		width 50%
		height 50%
		transform translate(0, 0)
		transition all 1s ease
		will-change transform width height

		&_pos

			&_tl
				top 0
				left 0

			&_tr
				top 0
				right 0

			&_bl
				bottom 0
				left 0

			&_br
				bottom 0
				right 0

	&__pagination
		position absolute
		top 39px
		right 32px
		opacity 1
		transition opacity .5s ease

		&_state_hide
			opacity 0

	&-close

		&_pos

			&_l
				transform translateX(-101%)

			&_r
				transform translateX(101%)

			&_b
				transform translateY(101%)

			&_t
				transform translateY(-101%)

			&_tl
				transform translate(-101%, -101%)

			&_tr
				transform translate(101%, -101%)

			&_bl
				transform translate(-101%, 101%)

			&_br
				transform translate(101%, 101%)

	&-open
		width 100%
		height 100%
		z-index 10

		.keise
			height 100%

		.keise__img
			opacity 0

		&:hover

			*
				cursor default

	.swiper-button-disabled
		display none

	&-show
		opacity 1

@media only screen and (max-width: 1099px)
	.keises
		height 800px

		&__slider
		&__open
			height 700px

		&__pagination
			right 50px

