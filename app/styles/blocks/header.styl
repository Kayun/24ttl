.header
	position relative
	z-index 1
	margin 0 auto
	width 100%
	height 700px

	&__logo
		position absolute
		z-index 2
		top 30px
		left 43px
		font-family ubuntu-b
		font-size 27px
		color #fff
		letter-spacing 3.5px
		text-decoration none
		text-transform uppercase

	&__menu-icon
		position fixed
		z-index 99
		top 42px
		right 52px
		size(28px, 23px)
		cursor pointer

		&:before
			position absolute
			top 10px
			left 0
			width 100%
			height 3px
			content ''
			background-color #fff
			box-shadow 0 -10px #fff, 0 10px #fff
			transition box-shadow .3s ease

		&:hover

			&:before
				box-shadow 0 -14px #fff, 0 14px #fff

	&__slider
		width 100%
		height 700px

		&-slide
			position absolute
			z-index 2
			top 0
			left 0
			padding 250px 0 100px
			width 100%
			height 100%
			color #fff

		&-title
			font-family ubuntu-b
			font-size 54px
			text-align center
			text-transform uppercase

		&-text
			margin 21px auto 0
			width 940px
			font-family ubuntu-r
			font-size 16px
			line-height 28px
			text-align center

		.swiper-wrapper
			position relative

		img
			position relative
			z-index 1

		&-pagination
			position absolute
			z-index 2
			bottom 47px
			width 100%
			text-align center


